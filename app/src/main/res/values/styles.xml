<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--红色主题-->
    <style name="RedTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="switch_text_color">#FF0000</item>
        <item name="switch_text_size">@dimen/test_size</item>
        <item name="switch_text">@string/red_color</item>
        <item name="switch_drawable">@drawable/red</item>
    </style>
    <!--蓝色主题-->
    <style name="BlueTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="switch_text_color">#0000FF</item>
        <item name="switch_text_size">@dimen/text_size_small</item>
        <item name="switch_text">@string/blue_color</item>
        <item name="switch_drawable">@drawable/blue</item>
    </style>

    <style name="ll_activity_top">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/activity_edge_margin</item>
        <item name="android:paddingRight">@dimen/activity_edge_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 竖版查询条件分隔线的样式-->
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>


</resources>
