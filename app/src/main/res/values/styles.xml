<resources>

    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="switch_text_color">#000000</item>
        <item name="switch_text_size">@dimen/test_size</item>
        <item name="switch_text">@string/black_color</item>
        <item name="switch_drawable">@drawable/test_drawable</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase">
    </style>

    <!--首屏透明-->
    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <!--<item name="windowNoTitle">true</item>-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <!--红色主题-->
    <style name="RedTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="switch_text_color">#FF0000</item>
        <item name="switch_text_size">@dimen/test_size</item>
        <item name="switch_text">@string/red_color</item>
        <item name="switch_drawable">@drawable/test_drawable_red</item>
    </style>
    <!--蓝色主题-->
    <style name="BlueTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="switch_text_color">#0000FF</item>
        <item name="switch_text_size">@dimen/text_size_small</item>
        <item name="switch_text">@string/blue_color</item>
        <item name="switch_drawable">@drawable/test_drawable_blue</item>
    </style>

    <style name="ll_activity_top">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/activity_edge_margin</item>
        <item name="android:paddingRight">@dimen/activity_edge_margin</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 竖版查询条件分隔线的样式-->
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider</item>
    </style>


</resources>
