<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="GridRecyclerView">
        <attr name="columnsNum" format="integer" />
        <attr name="itemHorizontalSpacing" format="dimension" />
        <attr name="itemVerticalSpacing" format="dimension" />
        <attr name="hasEdge" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="GridImageView">
        <attr name="cornerRadius" format="dimension"/>
        <attr name="ratio" format="float" />
        
        <attr name="strokeWidth" format="dimension" />
        <attr name="strokeVisible" format="boolean" />
        <attr name="strokeColor" format="color" />
        
        <attr name="checkEnabled" format="boolean" />
        <attr name="checked" format="boolean" />
    </declare-styleable>
    
    <declare-styleable name="CircularView">
        <attr name="circleColor" format="color" />
        <attr name="circularColor" format="color" />
        <attr name="circularWidth" format="dimension" />
    </declare-styleable>
</resources>