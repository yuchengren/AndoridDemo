<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="shape" format="enum">
        <enum name="rectangle" value="0" />
        <enum name="oval" value="1" />
        <enum name="line" value="2" />
        <enum name="ring" value="3" />
    </attr>
    <!-- 圆角弧度 -->
    <attr name="cornerRadius" format="dimension"/>
    <!-- 左上圆角弧度 -->
    <attr name="topLeftRadius" format="dimension" />
    <!-- 右上圆角弧度 -->
    <attr name="topRightRadius" format="dimension" />
    <!-- 右下圆角弧度 -->
    <attr name="bottomRightRadius" format="dimension" />
    <!-- 左下圆角弧度 -->
    <attr name="bottomLeftRadius" format="dimension" />

    <attr name="strokeWidth" format="dimension" />
    <attr name="strokeVisible" format="boolean" />
    <attr name="strokeColor" format="color" />
    <attr name="strokeDashWidth" format="dimension" /> <!--描边虚线的宽度-->
    <attr name="strokeDashGap" format="dimension" /><!--描边虚线之间的间隔-->

    <attr name="gradientType" format="enum" >
        <enum name="linear" value="0" />
        <enum name="radial" value="1" />
        <enum name="sweep" value="2" />
    </attr>
    <attr name="gradientUseLevel" format="boolean" />
    <attr name="gradientAngle" format="integer" />
    <attr name="gradientCenterX" format="dimension" />
    <attr name="gradientCenterY" format="dimension" />
    <attr name="gradientGradientRadius" format="dimension" />
    <attr name="gradientStartColor" format="color" />
    <attr name="gradientCenterColor" format="color" />
    <attr name="gradientEndColor" format="color" />

    
    <attr name="ratio" format="float" />
    <attr name="orientation" >
        <enum name="HORIZONTAL" value="0" />
        <enum name="VERTICAL" value="1" />
    </attr>

    <attr name="columnsNum" format="integer" />
    <attr name="itemHorizontalSpacing" format="dimension" />
    <attr name="itemVerticalSpacing" format="dimension" />
    <attr name="hasEdge" format="boolean"/>


    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <declare-styleable name="GridRecyclerView">
        <attr name="columnsNum" />
        <attr name="itemHorizontalSpacing"  />
        <attr name="itemVerticalSpacing" />
        <attr name="hasEdge" />
    </declare-styleable>

    <declare-styleable name="GridImageView">
        <attr name="cornerRadius" />
        <attr name="ratio"  />
        
        <attr name="strokeWidth"  />
        <attr name="strokeVisible" />
        <attr name="strokeColor"  />

        <attr name="strokeDashWidth" /> <!--描边虚线的宽度-->
        <attr name="strokeDashGap" /><!--描边虚线之间的间隔-->
        <attr name="strokeDashPhase" format="dimension" /><!--描边虚线间隔数组的偏移量-->
    </declare-styleable>
    
    <declare-styleable name="CircularView">
        <attr name="circleColor" format="color" />
        <attr name="circularColor" format="color" />
        <attr name="circularWidth" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MaterialHeader">
        <attr name="mhPrimaryColor" format="color" />
        <attr name="mhShadowColor" format="color" />
        <attr name="mhShadowRadius" format="dimension"/>
        <attr name="mhShowBezierWave" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="LinearRecyclerView">
        <attr name="orientation" />
        <attr name="reverseLayout" format="boolean" />
        <attr name="itemHorizontalSpacing"  />
        <attr name="itemVerticalSpacing" />
        <attr name="hasStartSpacing" format="boolean"/>
        <attr name="hasEndSpacing" format="boolean"/>

    </declare-styleable>

    <declare-styleable name="ShapeTextView">
        <attr name="android:gravity" />
        <attr name="android:clickable" />

        <attr name="cornerRadius" />
        <attr name="topLeftRadius"  />
        <attr name="topRightRadius" />
        <attr name="bottomRightRadius"  />
        <attr name="bottomLeftRadius" />

        <attr name="strokeWidth"  />
        <attr name="strokeColor" />
        <attr name="strokeDashWidth" /> <!--描边虚线的宽度-->
        <attr name="strokeDashGap" /><!--描边虚线之间的间隔-->

        <attr name="pressedStrokeVisible" format="boolean" />
        <attr name="disabledStrokeVisible" format="boolean" />
        <attr name="selectedStrokeVisible" format="boolean" />

        <attr name="pressedStrokeColor" format="color"/>
        <attr name="disabledStrokeColor" format="color"/>
        <attr name="selectedStrokeColor" format="color"/>

        <attr name="bgColor" format="color" />
        <attr name="pressedBgColor" format="color" />
        <attr name="disabledBgColor" format="color" />
        <attr name="selectedBgColor" format="color" />

        <attr name="pressedTextColor" format="color"/>
        <attr name="disabledTextColor" format="color"/>
        <attr name="selectedTextColor" format="color"/>

        <attr name="shape" />
        <attr name="gradientType" />
        <attr name="gradientUseLevel" />
        <attr name="gradientAngle" />
        <attr name="gradientCenterX" />
        <attr name="gradientCenterY" />
        <attr name="gradientGradientRadius"  />
        <attr name="gradientStartColor" />
        <attr name="gradientCenterColor" />
        <attr name="gradientEndColor" />
    </declare-styleable>
</resources>