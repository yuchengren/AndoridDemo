<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
    <declare-styleable name="GridRecyclerView">
        <attr name="maxItemCount" format="integer" />
        <attr name="columnsNum" format="integer" />

        <attr name="itemWidth" format="dimension" />
        <attr name="itemHeight" format="dimension" />
        <attr name="itemRatio" format="float" />
        <attr name="itemHorizontalSpacing" format="dimension" />
        <attr name="itemVerticalSpacing" format="dimension" />

        <attr name="itemCheckEnabled" format="boolean" />
        <attr name="itemCheckedDrawableResId" format="reference" />
        <attr name="itemNotCheckedDrawableResId" format="reference" />
        <attr name="itemCheckDrawableWidth" format="dimension" />
        <attr name="itemCheckDrawableHeight" format="dimension" />
        <attr name="itemCheckDrawableHorizontalMargin" format="dimension"/>
        <attr name="itemCheckDrawableVerticalMargin" format="dimension"/>
        <attr name="itemCheckDrawableGravity" >
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="fill_vertical" value="0x70" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="fill_horizontal" value="0x07" />
            <flag name="center" value="0x11" />
            <flag name="fill" value="0x77" />
            <flag name="clip_vertical" value="0x80" />
            <flag name="clip_horizontal" value="0x08" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>

        <attr name="itemCornerRadius" format="dimension" />
        <attr name="itemStrokeWidth" format="dimension" />
        <attr name="itemStrokeColor" format="color" />
        <attr name="itemScaleType" format="enum" >
            <enum name="MATRIX" value="0" />
            <enum name="FIT_XY" value="1" />
            <enum name="FIT_START" value="2" />
            <enum name="FIT_CENTER" value="3" />
            <enum name="FIT_END" value="4" />
            <enum name="CENTER" value="5" />
            <enum name="CENTER_CROP" value="6" />
            <enum name="CENTER_INSIDE" value="7" />
        </attr>

        <attr name="plusScaleType" format="enum" >
            <enum name="MATRIX" value="0" />
            <enum name="FIT_XY" value="1" />
            <enum name="FIT_START" value="2" />
            <enum name="FIT_CENTER" value="3" />
            <enum name="FIT_END" value="4" />
            <enum name="CENTER" value="5" />
            <enum name="CENTER_CROP" value="6" />
            <enum name="CENTER_INSIDE" value="7" />
        </attr>
        <attr name="plusCornerRadius" format="dimension" />
        <attr name="plusStrokeVisible" format="boolean" />
        <attr name="plusStrokeWidth" format="dimension" />
        <attr name="plusStrokeColor" format="color" />

        <attr name="plusDrawable" format="reference" />
        <attr name="plusEnabled" format="boolean" />


    </declare-styleable>
    <declare-styleable name="GridImageView">
        <attr name="cornerRadius" format="dimension"/>
        <attr name="ratio" format="float" />
        
        <attr name="strokeWidth" format="dimension" />
        <attr name="strokeVisible" format="boolean" />
        <attr name="strokeColor" format="color" />
        
        <attr name="checkEnabled" format="boolean" />
        <attr name="checked" format="boolean" />
        <attr name="checkedDrawableResId" format="reference" />
        <attr name="notCheckedDrawableResId" format="reference" />
        <attr name="checkDrawableWidth" format="dimension" />
        <attr name="checkDrawableHeight" format="dimension" />
        <attr name="checkDrawableHorizontalMargin" format="dimension"/>
        <attr name="checkDrawableVerticalMargin" format="dimension"/>
        <attr name="checkDrawableGravity" >
            <flag name="top" value="0x30" />
            <flag name="bottom" value="0x50" />
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center_vertical" value="0x10" />
            <flag name="fill_vertical" value="0x70" />
            <flag name="center_horizontal" value="0x01" />
            <flag name="fill_horizontal" value="0x07" />
            <flag name="center" value="0x11" />
            <flag name="fill" value="0x77" />
            <flag name="clip_vertical" value="0x80" />
            <flag name="clip_horizontal" value="0x08" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
        </attr>
    </declare-styleable>

</resources>