<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>
    <declare-styleable name="GridRecyclerView">
        <attr name="maxItemCount" format="integer" />
        <attr name="columnsNum" format="integer" />

        <attr name="itemWidth" format="dimension" />
        <attr name="itemHorizontalSpacing" format="dimension" />
        <attr name="itemVerticalSpacing" format="dimension" />

        <attr name="itemCornerRadius" format="dimension" />
        <attr name="itemStrokeVisible" format="boolean" />
        <attr name="itemStrokeWidth" format="dimension" />
        <attr name="itemStrokeColor" format="color" />
        <attr name="itemScaleType" format="enum" >
            <enum name="MATRIX" value="0" />
            <enum name="FIT_XY" value="1" />
            <enum name="FIT_START" value="2" />
            <enum name="FIT_CENTER" value="3" />
            <enum name="FIT_END" value="4" />
            <enum name="CENTER" value="5" />
            <enum name="CENTER_CROP" value="6" />
            <enum name="CENTER_INSIDE" value="7" />
        </attr>

        <attr name="plusScaleType" format="enum" >
            <enum name="MATRIX" value="0" />
            <enum name="FIT_XY" value="1" />
            <enum name="FIT_START" value="2" />
            <enum name="FIT_CENTER" value="3" />
            <enum name="FIT_END" value="4" />
            <enum name="CENTER" value="5" />
            <enum name="CENTER_CROP" value="6" />
            <enum name="CENTER_INSIDE" value="7" />
        </attr>
        <attr name="plusCornerRadius" format="dimension" />
        <attr name="plusStrokeVisible" format="boolean" />
        <attr name="plusStrokeWidth" format="dimension" />
        <attr name="plusStrokeColor" format="color" />

        <attr name="plusDrawable" format="reference" />
        <attr name="plusEnabled" format="boolean" />
    </declare-styleable>
    <declare-styleable name="GridImageView">
        <attr name="cornerRadius" format="dimension"/>
        <attr name="ratio" format="float" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="strokeVisible" format="boolean" />
        <attr name="strokeColor" format="color" />
    </declare-styleable>

</resources>